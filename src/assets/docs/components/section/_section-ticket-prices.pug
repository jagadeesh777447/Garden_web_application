include ../layer/_layer
include ../price/_price

// Ticket Prices
section.section.section-7.position-relative.overflow-hidden( style='background-color: #415ADE' )
	.section-layer: +layer-7
	.container-wide
		.row.justify-content-center
			.col-xs-8.col-sm-7.col-md-9.col-lg-10.col-xl-9.col-xxl-7.offset-xxl-2.section-content-3( data-animate!={
				in: { class: 'fadeInUpBig', delay: '.7s', duration: '.7s' },
				out: { class: 'fadeOutUpBig', delay: '0s', duration: '.4s' } } )
				h2.text-center.d-mobile-landscape-none Ticket Prices
				.owl-carousel.owl-style-1( data-owl= {
					items: 1,
					margin: 30,
					loop: false,
					mouseDrag: false,
					nav: true,
