// Contacts
section.section.section-8.position-relative.overflow-hidden( style='background-color: #44AA4E' )
	.section-layer: +layer-8
	.container
		.row.row-30.align-items-center.justify-content-center
			.col-xs-6.col-lg-5.col-xl-4.col-xxl-5.section-content-2( data-animate!={
				in: { class: 'fadeInUpBig', delay: '.3s' },
				out: { class: 'fadeOutUpBig', delay: '.3s' } } )
				h2 Get In Touch
				form.rd-mailform( data-form-output='form-output-global', data-form-type='contact', method='post', action='components/rd-mailform/rd-mailform.php' )
					.form-group
						.position-relative
							input.form-control( type='text', name='name', placeholder='Your name', data-constraints='@Required' )
					.form-group
						.position-relative
							input.form-control( type='email', name='email', placeholder='E-mail', data-constraints='@Email @Required' )
					.form-group
						.position-relative
							input.form-control( type='tel', name='tel', placeholder='Phone', data-constraints='@PhoneNumber @Required' )
					.form-group
						.position-relative
							textarea.form-control( name='question', placeholder='Message', data-constraints='@Required' )
					button.btn.btn-round.btn-primary.btn-anis( type='submit' ) Send Message

			#form-output-global.form-output.snackbar.snackbar-primary

			.col-xs-6.col-lg-7.section-content-2( data-animate!={
